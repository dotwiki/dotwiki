<div class="container grid-md">
<%= render layout: 'setting_menu', locals: {user: @user, active: 'change_password'} do %>
  <%= form_with(model: @user, local: true) do |form| %>
    <%= render partial: 'shared/form_error', locals: {form_object: @user} %>

    <div class="form-group">
      <%= form.label :password, class: 'form-label' %>
      <%= form.password_field :password, id: :user_password, class: 'form-input' %>
    </div>
    
    <div class="form-action">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
</div>