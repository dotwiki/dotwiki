<%= render layout: 'setting_menu', locals: {user: @user, active: 'user_setting'} do %>
  <%= form_with(model: @user, local: true) do |form| %>
    <%= render partial: 'shared/form_error', locals: {form_object: @user} %>

    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, id: :user_name, class: 'form-input', placeholder: 'ユーザー名' %>
    </div>

    <div class="form-group">
      <%= form.label :email, class: 'form-label' %>
      <%= form.text_field :email, id: :user_email, class: 'form-input', placeholder: 'メールアドレス' %>
    </div>

    <div class="form-group">
      <%= form.label :avatar, class: 'form-label' %>
      <%= form.file_field :avatar, id: :user_avatar, class: 'form-input' %>
    </div>

    <div class="form-action">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>